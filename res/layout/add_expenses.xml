<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:stretchColumns="1"
             android:padding="3px">

    <TableRow>

        <TextView android:layout_width="90px"
                  android:text="Expense for"/>
        <EditText android:id="@+id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:hint="@string/hint_required_field"
                  android:layout_alignParentRight="true"/>

    </TableRow>

    <TableRow>
        <TextView android:layout_width="90px"
                  android:text="Amount"/>
        <EditText android:id="@+id/amount"
                  android:numeric="decimal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:hint="@string/hint_required_field"
                  android:layout_alignParentRight="true"/>

    </TableRow>

    <TableRow>
        <TextView android:layout_width="90px"
                  android:text="Paid by"/>
        <Spinner android:id="@+id/paid_by"
                 android:layout_weight="1"/>
    </TableRow>

    <View android:layout_height="2dip"
          android:background="#FF909090"
          android:paddingBottom="5px"/>
    <TextView android:text="Participants"
              android:textSize="18px"/>
    <TextView android:id="@+id/participants"
              android:textSize="16px"/>
    <Button android:id="@+id/edit_participants"
                android:text="Edit participant list"/>


    <View android:layout_height="2dip"
          android:background="#FF909090"
          android:paddingBottom="5px"/>
    <TableRow>
        <Button android:id="@+id/confirm"
                android:text="Create"/>
        <Button android:id="@+id/calculate"
                android:text="Calculate"
                android:width="80px"/>
    </TableRow>
</TableLayout>